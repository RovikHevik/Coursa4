@model VizitkaOnline.Models.UserModel;
@{
    ViewData["Title"] = "Вход в акаунт";
    
    
}
<div class="container justify-content-center align-items-center display-flex">
        <main role="main" class="pb-3">
            <form method="post" class="col-sm col-sm-pull" asp-action="CheckUser"  asp-controller="User">
                <div class="form-group row">
                    <label for="inputLogin" class="col-sm-2 col-form-label">Логин</label>
                    <div class="col-sm-10">
                      <input type="text"asp-for="Login" class="form-control" id="inputLogin" placeholder="Логин">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Пароль</label>
                    <div class="col-sm-10">
                      <input type="password" asp-for="PasswordHash" class="form-control" id="inputPassword" placeholder="Пароль">
                    </div>
                 </div>
                 <div class="row">
                     <a class="nav-link text-dark mx-auto" asp-area="" asp-controller="User" asp-action="Registration">Еще нету аккаунта? - Зарегестрирываться</a>                       
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-primary mx-auto">Войти</button>
                </div>
                  @if(TempData["MessageErrorInput"] != null)
                    {
                        <div class="row alert alert-danger">
                             @TempData["MessageErrorInput"]
                        </div>
                    }
            </form>
        </main>
    </div>
