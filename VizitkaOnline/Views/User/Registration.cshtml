@{
    ViewData["Title"] = "Регистрация аккаунта";
}
@model VizitkaOnline.Models.UserModel;

    <div class="container justify-content-center align-items-center display-flex">
        <main role="main" class="pb-3">
            <form method="post" class="col-sm col-sm-pull" asp-action="Create" asp-controller="User">
                <div class="form-group row justify-content-center">
                    <label for="inputLogin" class="col-sm-3 col-form-label">Логин</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" asp-for="Login" id="inputLogin" placeholder="Логин">
                    </div>
                  </div>
                    <div class="form-group row justify-content-center">
                    <label for="inputLogin" class="col-sm-3 col-form-label">Email</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" asp-for="Email" id="inputEmail" placeholder="Email">
                    </div>
                  </div>
                   <div class="form-group row justify-content-center">
                    <label for="inputLogin" class="col-sm-3 col-form-label">Имя</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" asp-for="FirstName" id="inputEmail" placeholder="Имя">
                    </div>
                  </div>
                   <div class="form-group row justify-content-center">
                    <label for="inputLogin" class="col-sm-3 col-form-label">Фамилия</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" asp-for="LastName" id="inputEmail" placeholder="Фамилия">
                    </div>
                  </div>
                  <div class="form-group row justify-content-center">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Пароль</label>
                    <div class="col-sm-10">
                      <input type="password" class="form-control" asp-for="PasswordHash" id="inputPassword" placeholder="Пароль">
                    </div>
                 </div>
                 <div class="row">
                     <a class="nav-link text-dark mx-auto" asp-area="" asp-controller="User" asp-action="Login">Уже есть аккаунт? - Войти</a>                       
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-primary mx-auto">Зарегестрироваться</button>
                </div>             
                    @if(TempData["MessageErrorInput"] != null)
                    {
                        <div class="row alert alert-danger">
                             @TempData["MessageErrorInput"]
                        </div>
                    }
            </form>
        </main>
    </div>
